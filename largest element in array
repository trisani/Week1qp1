#include<stdio.h>
int main()
{
    int array[100];
    int size;
    printf("enter the size of the array you want to create:");
    scanf("%d",&size);
    printf("enter the element");
    for(int i=0;i<size;i++)
    {
        scanf("%d",&array[i]);
    }
    int largest=array[0];
    for(int j=1;j<size;j++)
    {
        if(array[j]>largest){
            largest=array[j];
        }
        }
    printf("the largest element is %d",largest);
    return 0;
}
